@page "/employees"
@using BlazorApp.Employee.Crud.Shared;
@inject IEmployeeService EmployeeService

<h3>Employee</h3>
<a href="employee" class="btn btn-primary">Create</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>NIK</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in employee)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td>@item.NIK</td>
                <td>@item.Address</td>
                <td>
                    <a href="employee/@item.Id" class="btn btn-secondary"><i class="oi oi-pencil"></i></a>
                    <a href="delete/@item.Id" class="btn btn-danger"><i class="oi oi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Tb_Employee> employee = new List<Tb_Employee>();

    protected override async Task OnInitializedAsync()
    {
        employee = await EmployeeService.GetAllAsync();
    }
}
